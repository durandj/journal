{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["DOM", "ESNext"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["vinxi/types/client"],
		"isolatedModules": true,
		"composite": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"references": [
		{
			"path": "../core"
		}
	]
}
