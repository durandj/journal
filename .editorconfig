# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{js,ts,jsx,tsx}]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.svg]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[.vscode/*.json]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[Dockerfile,*.Dockerfile]
indent_style = space
indent_size = 2
